<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="#caf1de"
        android:id="@+id/homecard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="@dimen/regular_margin"
        app:cardCornerRadius="16dp"
        android:elevation="@dimen/normal_elevation"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profile"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="@id/homecard"
        app:layout_constraintBottom_toBottomOf="@id/homecard"
        app:layout_constraintStart_toStartOf="@id/homecard"
        android:layout_margin="@dimen/regular_margin"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/homecard"
            app:layout_constraintBottom_toBottomOf="@id/homecard"
            app:layout_constraintStart_toEndOf="@id/user_profile"
            android:elevation="16dp"
            android:layout_marginLeft="16dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>